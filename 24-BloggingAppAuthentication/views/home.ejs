<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Homepage</title>
</head>
<body>
    <%- include('./partials/nav') %>
    
    <% if (locals.user) { %>
    <div class="container mt-3">
        <% locals.blogs.forEach(blog=> { %>
            <div class="card" style="width: 18rem;">
                <img src="<%= blog.coverImageURL %>" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title"><%= blog.title %></h5>     <!--title-->
                    <p class="card-text"><%= blog.body %></p>    <!--blog content/body-->
                    <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>      <!--view button-->
                </div>
            </div>
        <% }) %>
    </div>
    <% } %>
     
    <%- include('./partials/scripts') %>
</body>
</html>